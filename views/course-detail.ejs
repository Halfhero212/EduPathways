<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= course.title %> - Learning Platform</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <% if (user) { %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/courses"><i class="fas fa-graduation-cap me-2"></i>Learning Platform</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/courses"><i class="fas fa-book me-1"></i> Browse Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/my-courses"><i class="fas fa-folder me-1"></i> My Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard"><i class="fas fa-chart-line me-1"></i> Dashboard</a>
          </li>
          <li class="nav-item">
            <span class="nav-link"><i class="fas fa-user me-1"></i> <%= user.full_name %></span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt me-1"></i> Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <% } else { %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/courses"><i class="fas fa-graduation-cap me-2"></i>Learning Platform</a>
      <div class="ms-auto">
        <a href="/login" class="btn btn-outline-light me-2"><i class="fas fa-sign-in-alt me-1"></i> Login</a>
        <a href="/register" class="btn btn-light"><i class="fas fa-user-plus me-1"></i> Sign Up</a>
      </div>
    </div>
  </nav>
  <% } %>

  <div class="container mt-4 mb-5">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/courses"><i class="fas fa-home"></i> Courses</a></li>
        <li class="breadcrumb-item active"><%= course.title %></li>
      </ol>
    </nav>

    <div class="row">
      <div class="col-md-8">
        <div class="card mb-4 fade-in">
          <div class="course-card-header">
            <h2 class="mb-0"><i class="fas fa-book-open me-2"></i> <%= course.title %></h2>
          </div>
          <div class="card-body">
            <div class="d-flex align-items-center mb-3">
              <div class="teacher-avatar">
                <%= course.teacher_name.charAt(0).toUpperCase() %>
              </div>
              <div>
                <div class="fw-bold"><%= course.teacher_name %></div>
                <small class="text-muted">Course Instructor</small>
              </div>
            </div>
            
            <div class="course-meta mb-3">
              <span><i class="fas fa-tag"></i> <%= course.category_name || 'Uncategorized' %></span>
              <span><i class="fas fa-play-circle"></i> <%= course.lesson_count %> lessons</span>
              <span><i class="fas fa-users"></i> <%= course.student_count %> students</span>
            </div>
          </div>
        </div>

        <div class="card mb-4 fade-in">
          <div class="card-body">
            <h4><i class="fas fa-info-circle me-2"></i> About this course</h4>
            <p class="lead"><%= course.description %></p>
          </div>
        </div>

        <% if (course.what_you_will_learn) { %>
        <div class="card mb-4 fade-in">
          <div class="card-body">
            <h4><i class="fas fa-lightbulb me-2"></i> What you'll learn</h4>
            <p><%= course.what_you_will_learn %></p>
          </div>
        </div>
        <% } %>

        <div class="card fade-in">
          <div class="card-body">
            <h4><i class="fas fa-list me-2"></i> Course Content</h4>
            <p class="text-muted mb-3"><%= lessons.length %> lessons in this course</p>
            <% if (lessons.length === 0) { %>
              <div class="empty-state">
                <i class="fas fa-video"></i>
                <p class="mb-0">No lessons added yet.</p>
              </div>
            <% } else { %>
              <div class="list-group list-group-flush">
                <% lessons.forEach((lesson, index) => { %>
                  <div class="list-group-item">
                    <div class="d-flex align-items-center">
                      <div class="me-3">
                        <div style="width: 40px; height: 40px; background: linear-gradient(135deg, #4F46E5, #06B6D4); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold;">
                          <%= lesson.lesson_order %>
                        </div>
                      </div>
                      <div class="flex-grow-1">
                        <h6 class="mb-1"><%= lesson.title %></h6>
                        <small class="text-muted"><i class="fas fa-play-circle"></i> Video Lesson</small>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card sticky-sidebar fade-in">
          <div class="card-body">
            <h5><i class="fas fa-shopping-cart me-2"></i> Enroll in this course</h5>
            <div class="mb-3">
              <div class="d-flex justify-content-between mb-2">
                <span><i class="fas fa-play-circle text-primary"></i> <%= course.lesson_count %> lessons</span>
              </div>
              <div class="d-flex justify-content-between mb-2">
                <span><i class="fas fa-users text-success"></i> <%= course.student_count %> students</span>
              </div>
              <div class="d-flex justify-content-between mb-2">
                <span><i class="fas fa-certificate text-warning"></i> Certificate included</span>
              </div>
            </div>
            
            <% if (!user) { %>
              <a href="/login" class="btn btn-primary w-100 mb-2">
                <i class="fas fa-sign-in-alt me-2"></i> Login to Enroll
              </a>
              <p class="text-center text-muted small">Start learning today!</p>
            <% } else if (user.role === 'teacher') { %>
              <% if (course.teacher_id === user.id) { %>
                <a href="/courses/<%= course.id %>/manage" class="btn btn-primary w-100 mb-2">
                  <i class="fas fa-cog me-2"></i> Manage Course
                </a>
                <a href="/courses/<%= course.id %>" class="btn btn-outline-primary w-100">
                  <i class="fas fa-eye me-2"></i> Preview
                </a>
              <% } else { %>
                <div class="alert alert-info">
                  <i class="fas fa-info-circle"></i> Teachers cannot enroll in courses
                </div>
              <% } %>
            <% } else if (isEnrolled) { %>
              <div class="enrollment-badge text-center w-100 mb-3">
                <i class="fas fa-check-circle me-2"></i> Already Enrolled
              </div>
              <% if (lessons.length > 0) { %>
                <a href="/courses/<%= course.id %>/lessons/<%= lessons[0].id %>" class="btn btn-success w-100">
                  <i class="fas fa-play me-2"></i> Start Learning
                </a>
              <% } %>
            <% } else { %>
              <form method="POST" action="/courses/<%= course.id %>/enroll">
                <button type="submit" class="btn btn-primary w-100">
                  <i class="fas fa-plus-circle me-2"></i> Enroll Now - Free
                </button>
              </form>
              <p class="text-center text-muted small mt-2">Free lifetime access</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-4">
      <a href="/courses" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Back to Catalog
      </a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
