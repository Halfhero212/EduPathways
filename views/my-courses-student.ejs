<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Courses</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/courses"><i class="fas fa-graduation-cap me-2"></i>Learning Platform</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/courses"><i class="fas fa-book me-1"></i> Browse Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/my-courses"><i class="fas fa-folder me-1"></i> My Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard"><i class="fas fa-chart-line me-1"></i> Dashboard</a>
          </li>
          <li class="nav-item">
            <span class="nav-link"><i class="fas fa-user me-1"></i> <%= user.full_name %></span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt me-1"></i> Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="hero-section">
    <div class="container">
      <h1><i class="fas fa-user-graduate me-2"></i> My Learning</h1>
      <p>Continue where you left off</p>
    </div>
  </div>

  <div class="container mt-4 mb-5">
    <h3 class="mb-4"><i class="fas fa-book-open me-2"></i> Enrolled Courses (<%= courses.length %>)</h3>

    <div class="row">
      <% if (courses.length === 0) { %>
        <div class="col-12">
          <div class="empty-state fade-in">
            <i class="fas fa-graduation-cap"></i>
            <h5>No courses enrolled yet</h5>
            <p class="text-muted">Start your learning journey by enrolling in a course</p>
            <a href="/courses" class="btn btn-primary mt-3">
              <i class="fas fa-search me-2"></i> Browse Courses
            </a>
          </div>
        </div>
      <% } else { %>
        <% courses.forEach(course => { %>
          <div class="col-md-6 mb-4">
            <div class="card h-100 fade-in">
              <div class="course-card-header">
                <h5 class="mb-0"><%= course.title %></h5>
              </div>
              <div class="card-body d-flex flex-column">
                <p class="card-text flex-grow-1"><%= course.description.substring(0, 100) %>...</p>
                <div class="course-meta mb-3">
                  <span><i class="fas fa-user-tie"></i> <%= course.teacher_name %></span>
                  <span><i class="fas fa-play-circle"></i> <%= course.lesson_count %> lessons</span>
                </div>
                <div class="mb-3">
                  <% 
                    const progressPercent = course.lesson_count > 0 ? Math.round((course.completed_lessons / course.lesson_count) * 100) : 0;
                  %>
                  <div class="d-flex justify-content-between mb-2">
                    <span class="small text-muted">Progress</span>
                    <span class="small fw-bold"><%= progressPercent %>%</span>
                  </div>
                  <div class="progress mb-2">
                    <div class="progress-bar" role="progressbar" style="width: <%= progressPercent %>%">
                    </div>
                  </div>
                  <small class="text-muted">
                    <i class="fas fa-check-circle text-success"></i> <%= course.completed_lessons %> / <%= course.lesson_count %> lessons completed
                  </small>
                </div>
                <a href="/courses/<%= course.id %>" class="btn btn-primary w-100">
                  <i class="fas fa-play me-2"></i> <%= progressPercent > 0 ? 'Continue Learning' : 'Start Learning' %>
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
