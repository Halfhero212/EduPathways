<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Courses</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/courses">Learning Platform</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/courses">Browse Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/my-courses">My Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <span class="nav-link">Welcome, <%= user.full_name %></span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h2>My Enrolled Courses</h2>

    <div class="row mt-4">
      <% if (courses.length === 0) { %>
        <div class="col-12">
          <div class="alert alert-info">
            You haven't enrolled in any courses yet. <a href="/courses">Browse courses</a>
          </div>
        </div>
      <% } else { %>
        <% courses.forEach(course => { %>
          <div class="col-md-6 mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= course.title %></h5>
                <p class="card-text"><%= course.description.substring(0, 100) %>...</p>
                <p class="text-muted small">By <%= course.teacher_name %></p>
                <div class="mb-2">
                  <% 
                    const progressPercent = course.lesson_count > 0 ? Math.round((course.completed_lessons / course.lesson_count) * 100) : 0;
                  %>
                  <div class="progress mb-2">
                    <div class="progress-bar" role="progressbar" style="width: <%= progressPercent %>%" aria-valuenow="<%= progressPercent %>" aria-valuemin="0" aria-valuemax="100">
                      <%= progressPercent %>%
                    </div>
                  </div>
                  <small class="text-muted"><%= course.completed_lessons %> / <%= course.lesson_count %> lessons completed</small>
                </div>
                <a href="/courses/<%= course.id %>" class="btn btn-primary">Continue Learning</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
