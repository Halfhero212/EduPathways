<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= task.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/dashboard">School Platform</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/lessons">Lessons</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/tasks">Tasks</a>
          </li>
          <li class="nav-item">
            <span class="nav-link">Welcome, <%= user.full_name %></span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h2><%= task.title %></h2>
    <p class="text-muted">By <%= task.teacher_name %> | Deadline: <%= new Date(task.deadline).toLocaleString() %></p>
    
    <div class="card mb-4">
      <div class="card-body">
        <h5>Description</h5>
        <p><%= task.description %></p>
      </div>
    </div>

    <% if (user.role === 'student') { %>
      <div class="card">
        <div class="card-body">
          <h5>Your Submission</h5>
          <% if (typeof submission !== 'undefined' && submission) { %>
            <div class="alert alert-success">
              <strong>Submitted on:</strong> <%= new Date(submission.submitted_at).toLocaleString() %>
            </div>
            <p><strong>Your Response:</strong></p>
            <p><%= submission.response %></p>
            <hr>
            <p class="text-muted">You can resubmit to update your response:</p>
          <% } %>
          
          <form method="POST" action="/tasks/<%= task.id %>/submit">
            <div class="mb-3">
              <label for="response" class="form-label">Your Response</label>
              <textarea class="form-control" id="response" name="response" rows="5" required><%= (typeof submission !== 'undefined' && submission) ? submission.response : '' %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Response</button>
          </form>
        </div>
      </div>
    <% } else { %>
      <div class="card">
        <div class="card-body">
          <h5>Student Submissions (<%= typeof submissions !== 'undefined' ? submissions.length : 0 %>)</h5>
          <% if (typeof submissions !== 'undefined' && submissions.length > 0) { %>
            <% submissions.forEach(sub => { %>
              <div class="border p-3 mb-3">
                <strong><%= sub.student_name %></strong> - <span class="text-muted"><%= new Date(sub.submitted_at).toLocaleString() %></span>
                <p class="mt-2"><%= sub.response %></p>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-muted">No submissions yet.</p>
          <% } %>
        </div>
      </div>
    <% } %>

    <div class="mt-4">
      <a href="/tasks" class="btn btn-secondary">Back to Tasks</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
