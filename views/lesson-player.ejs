<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= lesson.title %> - <%= course.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .video-container {
      position: relative;
      padding-bottom: 56.25%;
      height: 0;
      overflow: hidden;
      pointer-events: auto;
      background: #000;
      border-radius: 12px;
    }
    .video-container iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
    .video-wrapper {
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }
  </style>
</head>
<body oncontextmenu="return false;">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/courses"><i class="fas fa-graduation-cap me-2"></i>Learning Platform</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/courses/<%= course.id %>">
              <i class="fas fa-info-circle me-1"></i> Course Overview
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/my-courses">
              <i class="fas fa-folder me-1"></i> My Courses
            </a>
          </li>
          <li class="nav-item">
            <span class="nav-link"><i class="fas fa-user me-1"></i> <%= user.full_name %></span>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid mt-3 mb-5">
    <div class="row">
      <div class="col-lg-8 mb-4">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/courses"><i class="fas fa-home"></i> Courses</a></li>
            <li class="breadcrumb-item"><a href="/courses/<%= course.id %>"><%= course.title %></a></li>
            <li class="breadcrumb-item active"><%= lesson.title %></li>
          </ol>
        </nav>

        <div class="card mb-4 fade-in">
          <div class="card-body">
            <h3><i class="fas fa-video me-2"></i> <%= lesson.title %></h3>
            <p class="text-muted"><i class="fas fa-book-open me-1"></i> <%= course.title %></p>
          </div>
        </div>
        
        <div class="video-wrapper fade-in">
          <div class="video-container">
            <% 
              let videoId = '';
              const url = lesson.youtube_url;
              if (url.includes('youtube.com/watch?v=')) {
                videoId = url.split('v=')[1].split('&')[0];
              } else if (url.includes('youtu.be/')) {
                videoId = url.split('youtu.be/')[1].split('?')[0];
              }
            %>
            <iframe 
              src="https://www.youtube.com/embed/<%= videoId %>?modestbranding=1&rel=0&showinfo=0" 
              frameborder="0" 
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
              allowfullscreen>
            </iframe>
          </div>
        </div>

        <% if (user.role === 'student') { %>
        <div class="card mt-4 fade-in">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <% if (progress && progress.completed) { %>
                  <h5 class="text-success mb-1">
                    <i class="fas fa-check-circle me-2"></i> Lesson Completed!
                  </h5>
                  <p class="text-muted mb-0">Great job! Keep learning.</p>
                <% } else { %>
                  <h5 class="mb-1">Mark as Complete</h5>
                  <p class="text-muted mb-0">Finished watching? Mark this lesson complete.</p>
                <% } %>
              </div>
              <% if (progress && progress.completed) { %>
                <button class="btn btn-success" disabled>
                  <i class="fas fa-check-circle me-2"></i> Completed
                </button>
              <% } else { %>
                <button class="btn btn-primary" onclick="markComplete()">
                  <i class="fas fa-check me-2"></i> Mark as Complete
                </button>
              <% } %>
            </div>
          </div>
        </div>

        <div class="card mt-3 fade-in">
          <div class="card-body">
            <h5><i class="fas fa-arrow-right me-2"></i> Navigation</h5>
            <div class="d-flex gap-2">
              <% 
                const currentIndex = allLessons.findIndex(l => l.id === lesson.id);
                const prevLesson = currentIndex > 0 ? allLessons[currentIndex - 1] : null;
                const nextLesson = currentIndex < allLessons.length - 1 ? allLessons[currentIndex + 1] : null;
              %>
              <% if (prevLesson) { %>
                <a href="/courses/<%= course.id %>/lessons/<%= prevLesson.id %>" class="btn btn-outline-primary">
                  <i class="fas fa-arrow-left me-2"></i> Previous Lesson
                </a>
              <% } %>
              <% if (nextLesson) { %>
                <a href="/courses/<%= course.id %>/lessons/<%= nextLesson.id %>" class="btn btn-primary ms-auto">
                  Next Lesson <i class="fas fa-arrow-right ms-2"></i>
                </a>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
      </div>

      <div class="col-lg-4">
        <div class="card sticky-sidebar fade-in">
          <div class="card-header bg-primary text-white">
            <h6 class="mb-0"><i class="fas fa-list me-2"></i> Course Content</h6>
          </div>
          <div class="list-group list-group-flush" style="max-height: 600px; overflow-y: auto;">
            <% allLessons.forEach(l => { %>
              <a href="/courses/<%= course.id %>/lessons/<%= l.id %>" 
                 class="list-group-item list-group-item-action lesson-item <%= l.id === lesson.id ? 'active' : '' %>">
                <div class="d-flex align-items-center">
                  <div class="me-3">
                    <div style="width: 35px; height: 35px; background: <%= l.id === lesson.id ? '#fff' : 'linear-gradient(135deg, #4F46E5, #06B6D4)' %>; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: <%= l.id === lesson.id ? '#4F46E5' : '#fff' %>; font-weight: bold; font-size: 0.9rem;">
                      <%= l.lesson_order %>
                    </div>
                  </div>
                  <div class="flex-grow-1">
                    <div class="fw-<%= l.id === lesson.id ? 'bold' : 'normal' %>"><%= l.title %></div>
                    <small class="text-muted"><i class="fas fa-play-circle"></i> Video</small>
                  </div>
                  <% if (user.role === 'student') { %>
                    <div>
                      <% if (l.id === lesson.id && progress && progress.completed) { %>
                        <i class="fas fa-check-circle text-success"></i>
                      <% } %>
                    </div>
                  <% } %>
                </div>
              </a>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('keydown', function(e) {
      if (e.keyCode === 123 || (e.ctrlKey && e.shiftKey && e.keyCode === 73)) {
        e.preventDefault();
        return false;
      }
    });

    function markComplete() {
      fetch('/courses/<%= course.id %>/lessons/<%= lesson.id %>/complete', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        }
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          location.reload();
        }
      });
    }
  </script>
</body>
</html>
