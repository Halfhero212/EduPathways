<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Course</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/courses">Learning Platform</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/courses">Browse Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/my-courses">My Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">Dashboard</a>
          </li>
          <li class="nav-item">
            <span class="nav-link">Welcome, <%= user.full_name %></span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h2>Manage Course: <%= course.title %></h2>

    <div class="row mt-4">
      <div class="col-md-8">
        <h4>Course Lessons (<%= lessons.length %>)</h4>
        <% if (lessons.length === 0) { %>
          <div class="alert alert-info">No lessons added yet. Add your first lesson below.</div>
        <% } else { %>
          <ul class="list-group mb-4">
            <% lessons.forEach(lesson => { %>
              <li class="list-group-item">
                <strong><%= lesson.lesson_order %>.</strong> <%= lesson.title %>
                <a href="/courses/<%= course.id %>/lessons/<%= lesson.id %>" class="btn btn-sm btn-outline-primary float-end">View</a>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>

      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5>Add New Lesson</h5>
            <% if (error) { %>
              <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form method="POST" action="/courses/<%= course.id %>/lessons">
              <div class="mb-3">
                <label for="title" class="form-label">Lesson Title</label>
                <input type="text" class="form-control" id="title" name="title" required>
              </div>
              <div class="mb-3">
                <label for="youtube_url" class="form-label">YouTube URL</label>
                <input type="url" class="form-control" id="youtube_url" name="youtube_url" placeholder="https://youtube.com/watch?v=..." required>
              </div>
              <div class="mb-3">
                <label for="lesson_order" class="form-label">Lesson Order</label>
                <input type="number" class="form-control" id="lesson_order" name="lesson_order" value="<%= lessons.length + 1 %>" min="1" required>
              </div>
              <button type="submit" class="btn btn-primary w-100">Add Lesson</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-4">
      <a href="/courses/<%= course.id %>" class="btn btn-secondary">View Course Page</a>
      <a href="/my-courses" class="btn btn-outline-secondary">Back to My Courses</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
