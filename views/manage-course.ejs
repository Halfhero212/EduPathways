<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Course</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/courses"><i class="fas fa-graduation-cap me-2"></i>Learning Platform</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/courses"><i class="fas fa-book me-1"></i> Browse Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/my-courses"><i class="fas fa-folder me-1"></i> My Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard"><i class="fas fa-chart-line me-1"></i> Dashboard</a>
          </li>
          <li class="nav-item">
            <span class="nav-link"><i class="fas fa-user me-1"></i> <%= user.full_name %></span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt me-1"></i> Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4 mb-5">
    <div class="card mb-4 shadow-sm fade-in">
      <div class="course-card-header">
        <h3 class="mb-0"><i class="fas fa-cog me-2"></i> <%= course.title %></h3>
      </div>
      <div class="card-body">
        <p class="mb-0">Manage your course content and add new lessons</p>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8 mb-4">
        <div class="card shadow-sm fade-in">
          <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i> Course Lessons (<%= lessons.length %>)</h5>
          </div>
          <div class="card-body">
            <% if (lessons.length === 0) { %>
              <div class="empty-state">
                <i class="fas fa-video"></i>
                <h5>No lessons yet</h5>
                <p class="text-muted">Add your first lesson using the form on the right</p>
              </div>
            <% } else { %>
              <div class="list-group list-group-flush">
                <% lessons.forEach((lesson, index) => { %>
                  <div class="list-group-item">
                    <div class="d-flex align-items-center">
                      <div class="me-3">
                        <div style="width: 40px; height: 40px; background: linear-gradient(135deg, #4F46E5, #06B6D4); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold;">
                          <%= lesson.lesson_order %>
                        </div>
                      </div>
                      <div class="flex-grow-1">
                        <h6 class="mb-1"><%= lesson.title %></h6>
                        <small class="text-muted"><i class="fas fa-link"></i> <%= lesson.youtube_url.substring(0, 50) %>...</small>
                      </div>
                      <a href="/courses/<%= course.id %>/lessons/<%= lesson.id %>" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye"></i> View
                      </a>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="card shadow-sm sticky-sidebar fade-in">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i> Add New Lesson</h5>
          </div>
          <div class="card-body">
            <% if (error) { %>
              <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle me-2"></i><%= error %>
              </div>
            <% } %>
            <form method="POST" action="/courses/<%= course.id %>/lessons">
              <div class="mb-3">
                <label for="title" class="form-label fw-bold">
                  <i class="fas fa-heading me-1"></i> Lesson Title
                </label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter lesson title" required>
              </div>
              <div class="mb-3">
                <label for="youtube_url" class="form-label fw-bold">
                  <i class="fab fa-youtube me-1"></i> YouTube URL
                </label>
                <input type="url" class="form-control" id="youtube_url" name="youtube_url" placeholder="https://youtube.com/watch?v=..." required>
                <small class="text-muted">Paste the full YouTube video URL</small>
              </div>
              <div class="mb-3">
                <label for="lesson_order" class="form-label fw-bold">
                  <i class="fas fa-sort-numeric-up me-1"></i> Lesson Order
                </label>
                <input type="number" class="form-control" id="lesson_order" name="lesson_order" value="<%= lessons.length + 1 %>" min="1" required>
              </div>
              <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-plus me-2"></i> Add Lesson
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-4">
      <a href="/courses/<%= course.id %>" class="btn btn-outline-primary">
        <i class="fas fa-eye me-2"></i> View Course Page
      </a>
      <a href="/my-courses" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i> Back to My Courses
      </a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
