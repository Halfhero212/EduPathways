<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Course Catalog - Learning Platform</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <% if (user) { %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/courses"><i class="fas fa-graduation-cap me-2"></i>Learning Platform</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/courses"><i class="fas fa-book me-1"></i> Browse Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/my-courses"><i class="fas fa-folder me-1"></i> My Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard"><i class="fas fa-chart-line me-1"></i> Dashboard</a>
          </li>
          <li class="nav-item">
            <span class="nav-link"><i class="fas fa-user me-1"></i> <%= user.full_name %></span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt me-1"></i> Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <% } else { %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/courses"><i class="fas fa-graduation-cap me-2"></i>Learning Platform</a>
      <div class="ms-auto">
        <a href="/login" class="btn btn-outline-light me-2"><i class="fas fa-sign-in-alt me-1"></i> Login</a>
        <a href="/register" class="btn btn-light"><i class="fas fa-user-plus me-1"></i> Sign Up</a>
      </div>
    </div>
  </nav>
  <% } %>

  <div class="hero-section">
    <div class="container">
      <h1><i class="fas fa-book-open me-2"></i> Discover Your Next Course</h1>
      <p>Explore thousands of courses taught by expert instructors</p>
      <div class="mt-4">
        <input type="text" id="searchInput" class="form-control search-box" placeholder="Search courses by title or description..." onkeyup="searchCourses()">
      </div>
    </div>
  </div>

  <div class="container mt-4 mb-5">
    <div class="row">
      <div class="col-md-3 mb-4">
        <div class="category-sidebar">
          <h5><i class="fas fa-filter me-2"></i> Categories</h5>
          <div class="list-group list-group-flush">
            <a href="/courses" class="list-group-item list-group-item-action <%= !selectedCategory ? 'active' : '' %>">
              <i class="fas fa-th-large me-2"></i> All Courses
            </a>
            <% categories.forEach(cat => { %>
              <a href="/courses?category=<%= cat.id %>" class="list-group-item list-group-item-action <%= selectedCategory == cat.id ? 'active' : '' %>">
                <i class="fas fa-<%= cat.name === 'Programming' ? 'code' : cat.name === 'Mathematics' ? 'calculator' : cat.name === 'Science' ? 'flask' : cat.name === 'Languages' ? 'language' : cat.name === 'Business' ? 'briefcase' : 'palette' %> me-2"></i>
                <%= cat.name %>
              </a>
            <% }) %>
          </div>
        </div>
      </div>

      <div class="col-md-9">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3><i class="fas fa-book me-2"></i> Available Courses</h3>
          <% if (user && user.role === 'teacher') { %>
            <a href="/courses/create" class="btn btn-primary">
              <i class="fas fa-plus me-2"></i> Create New Course
            </a>
          <% } %>
        </div>

        <div class="row" id="courseList">
          <% if (courses.length === 0) { %>
            <div class="col-12">
              <div class="empty-state fade-in">
                <i class="fas fa-book-open"></i>
                <h5>No courses available</h5>
                <p class="text-muted">There are no courses in this category yet.</p>
                <% if (user && user.role === 'teacher') { %>
                  <a href="/courses/create" class="btn btn-primary mt-3">
                    <i class="fas fa-plus me-2"></i> Create First Course
                  </a>
                <% } %>
              </div>
            </div>
          <% } else { %>
            <% courses.forEach(course => { %>
              <div class="col-md-6 mb-4 course-item fade-in" data-title="<%= course.title.toLowerCase() %>" data-desc="<%= course.description.toLowerCase() %>">
                <div class="card h-100">
                  <div class="course-card-header">
                    <h5 class="mb-0"><%= course.title %></h5>
                  </div>
                  <div class="card-body d-flex flex-column">
                    <p class="card-text flex-grow-1"><%= course.description.substring(0, 120) %>...</p>
                    <div class="course-meta">
                      <span><i class="fas fa-user-tie"></i> <%= course.teacher_name %></span>
                      <span><i class="fas fa-tag"></i> <%= course.category_name || 'Uncategorized' %></span>
                    </div>
                    <div class="mt-3">
                      <span class="badge bg-info"><i class="fas fa-play-circle"></i> <%= course.lesson_count %> lessons</span>
                      <span class="badge bg-success"><i class="fas fa-users"></i> <%= course.student_count %> students</span>
                    </div>
                    <a href="/courses/<%= course.id %>" class="btn btn-primary w-100 mt-3">
                      <i class="fas fa-eye me-2"></i> View Course
                    </a>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function searchCourses() {
      const searchTerm = document.getElementById('searchInput').value.toLowerCase();
      const courseItems = document.querySelectorAll('.course-item');
      
      courseItems.forEach(item => {
        const title = item.getAttribute('data-title');
        const desc = item.getAttribute('data-desc');
        
        if (title.includes(searchTerm) || desc.includes(searchTerm)) {
          item.style.display = '';
        } else {
          item.style.display = 'none';
        }
      });
    }
  </script>
</body>
</html>
